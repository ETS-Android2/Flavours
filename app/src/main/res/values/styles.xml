<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
    </style>

    <style name="BaseCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CategoryCard" parent="BaseCard">
        <item name="cardBackgroundColor">@color/colorOffWhite</item>
    </style>

    <style name="RecipeCard" parent="BaseCard">
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="CategoryText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>